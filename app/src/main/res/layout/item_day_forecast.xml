<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_glass_card"
    android:padding="12dp">

    <!-- Day label -->
    <TextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Weather icon -->
    <ImageView
        android:id="@+id/ivDayIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_weather_cloud"
        app:tint="@color/text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDay"
        android:layout_marginTop="4dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvDayDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cloudy"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/ivDayIcon"
        app:layout_constraintTop_toTopOf="@id/ivDayIcon"
        app:layout_constraintEnd_toStartOf="@id/tvDayTemp"
        android:layout_marginStart="8dp"/>

    <!-- Temp -->
    <TextView
        android:id="@+id/tvDayTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-2° / -6°"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
