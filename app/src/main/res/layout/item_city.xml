<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="@dimen/space_m"
    android:background="@drawable/bg_glass_card"
    android:padding="@dimen/space_l">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/weather_icon"
        android:src="@drawable/ic_weather_cloud"
        app:tint="@color/text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_s"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Kyiv"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="@id/ivIcon"
        app:layout_constraintEnd_toStartOf="@id/tvTemp"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/tvCondition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_s"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Cloudy"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/tvCity"
        app:layout_constraintEnd_toStartOf="@id/tvTemp" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-12°"
        android:textColor="@color/text_primary"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMinMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="H:-10°  L:-14°"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tvTemp"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ✅ Красивое размещение: ниже min/max, с отступом от правого края и низа -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDetails"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingHorizontal="16dp"
        android:text="Details"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:strokeWidth="1dp"
        app:strokeColor="#66FFFFFF"
        app:backgroundTint="#22FFFFFF"
        app:rippleColor="#33FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvMinMax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
